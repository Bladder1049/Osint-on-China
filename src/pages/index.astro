---
// Component imports
import Layout from "@layout"
import {
	HeroSlice,
	AboutSlice,
	ServicesSlice,
	LatestArticlesSlice,
	ContactSlice
} from "@component/home"

// Fetch all articles
const articles = await Astro.glob("../../_articles/*.md")

const filteredArticles = articles.slice(-3)
---

<Layout title="Home">
	<HeroSlice />
	<AboutSlice />
	<ServicesSlice />
	<LatestArticlesSlice data={filteredArticles} />
	<ContactSlice />
</Layout>
